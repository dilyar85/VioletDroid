<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="100dp"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/element_frame"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
    <ImageView
        android:id="@+id/element_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_gravity="center"
        android:tag="@string/view_not_selected_tag"
        android:src="@drawable/aggregation"
        tools:ignore="ContentDescription"/>

    <EditText
        android:id="@+id/element_edittext"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:visibility="gone"
        android:focusableInTouchMode="false"
        />
    </FrameLayout>

    <TextView
        android:id="@+id/element_desc_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/aggregation_line"/>
</LinearLayout>